<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PaneController">
   <top>
      <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="infoButton" mnemonicParsing="false" onAction="#infoButtonPressed" text="Info" />
            <Button fx:id="circleButton" mnemonicParsing="false" onAction="#circleButtonPressed" text="Circle" />
            <Button fx:id="rectangleButton" mnemonicParsing="false" onAction="#rectangleButtonPressed" text="Rectangle" />
            <Button fx:id="triangleButton" mnemonicParsing="false" onAction="#triangleButtonPressed" text="Triangle" />
            <ColorPicker fx:id="picker" prefHeight="25.0" prefWidth="42.0" />
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButtonPressed" text="Clear" />
            <CheckBox fx:id="editModeCheckbox" mnemonicParsing="false" onAction="#switchMode" text="EditMode" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#save" text="Save" />
            <Button fx:id="loadButton" mnemonicParsing="false" onAction="#load" text="Button" />
        </items>
      </ToolBar>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <Pane fx:id="displayPane" onMouseClicked="#drawWithPoints" prefHeight="200.0" prefWidth="200.0" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
